<% include ../partials/header %>

<div class="container forms">
    <div class="row">
        <form action="/campground/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value="<%= camp.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value="<%= camp.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" value="<%= camp.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campground">Go Back!</a>
    </div>
</div>

<% include ../partials/footer %>